<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">
        
        
        <form method='post' action='@Url.Action("Cadastrar")' enctype="multipart/form-data" class="frm-cad-equipe">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Equipes</h1>
                <hr>
            </div>

            @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
            <input name="Nome" required class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:">    
            <div class="flex-file">
                <label for="image">Imagem da Equipe...</label>
                <input name="Imagem" type="file" id="image" />
              </div>
            
            <button style="cursor:pointer;" type="submit">Cadastro</button>
            

        </form>

        <!-- TABELA CADASTRO DE EQUIPES -->

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Equipe equipe in ViewBag.Equipe)
    {
        <tr>
            <td>@equipe.IdEquipe</td>
            <td>@equipe.Nome</td>
            <td>
                <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px">
            </td>
            <td>
                <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a>
            </td>
        </tr>
    }
            </tbody>
        </table>
