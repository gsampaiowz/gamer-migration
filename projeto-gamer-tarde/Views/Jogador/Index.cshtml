@model Jogador

@{
ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">
<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">

        <form method="post" action='@Url.Action("Cadastrar")' enctype="application/x-www-form-urlencoded"
            class="frm-cad-equipe">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Jogadores</h1>
                <hr>
            </div>

            <select class="campo-entrada" name="IdEquipe" id="IdEquipe">
                <option value="0">Selecione uma equipe: </option>
                @foreach (Equipe equipe in ViewBag.Equipe)
                {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
                }
            </select>

            <input class="campo-entrada" type="text" name="Nome" id="nome-jogador"
                placeholder="Digite o nome do Jogador:">
            <input class="campo-entrada" type="email" name="Email" id="email-jogador"
                placeholder="Digite o Email do Jogador:">
            <input class="campo-entrada" type="password" name="Senha" id="senha" placeholder="Digite a Senha:">
            <button type="submit">Cadastrar</button>

        </form>

        <!-- TABELA CADASTRO DE EQUIPES -->

        <table>
            <caption>Jogadores</caption>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Jogador jogador in ViewBag.Jogador)
                {
                <tr>
                    <td row-label="ID">@jogador.IdJogador</td>
                    <td row-label="Nome">@jogador.Nome</td>
                    <td row-label="Email">@jogador.Email</td>
                    <td row-label="Imagem">
                        <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="Imagem da equipe @jogador.Equipe.Nome"
                            width="50px">
                    </td>
                    <td row-label="Ações">
                        <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/trash.png"
                                alt=""></a>

                        <a class="text-dark nav-link" asp-area="" asp-controller="Jogador" asp-action="Editar"
                            asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </section>
</main>
<section class="sem-suporte">
    <h1>Esse site ainda não possui suporte para esse tamanho de tela.</h1>
    <img src="~/assets/triste.png" alt="Carinha triste">
</section>